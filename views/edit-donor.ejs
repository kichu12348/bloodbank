<%- include('partials/header') %>
<%- include('partials/nav') %>

<main class="max-w-2xl mx-auto px-4 py-6">
  <h1 class="text-2xl font-semibold mb-4">Edit Donor</h1>

  <% if (error) { %>
    <div class="mb-4 p-3 rounded bg-red-100 text-red-800"><%= error %></div>
  <% } %>

  <form action="/donors/edit/<%= donor.donor_id %>" method="POST" class="space-y-4 bg-white p-4 border rounded shadow-sm">
    <div>
      <label class="block text-sm font-medium mb-1">Name</label>
      <input type="text" name="name" value="<%= donor.name %>" class="w-full border rounded px-3 py-2" required />
    </div>
    <div>
      <label class="block text-sm font-medium mb-1">Blood Group</label>
      <input type="text" name="blood_group" value="<%= donor.blood_group %>" class="w-full border rounded px-3 py-2 bg-gray-100 cursor-not-allowed" readonly required />
    </div>
    <div>
      <label class="block text-sm font-medium mb-1">Phone</label>
      <input type="text" name="phone" value="<%= donor.phone %>" class="w-full border rounded px-3 py-2" required />
    </div>
    <div>
      <label class="block text-sm font-medium mb-1">City</label>
      <input type="text" name="city" value="<%= donor.city %>" class="w-full border rounded px-3 py-2" required />
    </div>
    <div class="flex gap-2">
      <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Update</button>
      <a href="/donors" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">Cancel</a>
    </div>
  </form>
</main>

<%- include('partials/footer') %>
